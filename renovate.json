        "cuelang/cue",
        "direnv/direnv",
        "wagoodman/dive",
        "docker/app",
        "mayflower/docker-ls",
        "Trendyol/docker-shell",
        "docker/docker-ce",
        "goodwithtech/dockle",
        "lirantal/dockly",
        "EnvCLI/EnvCLI",
        "firecracker-microvm/firecracker",
        "firecracker-microvm/firectl",
        "cloudflare/cloudflare-go",
        "fluxcd/flux2",
        "containers/fuse-overlayfs",
        "jtyr/gbt",
        "cli/cli",
        "extrawurst/gitui",
        "charmbracelet/glow",
        "slok/grafterm",
        "aksakalli/gtop",
        "hetznercloud/cli",
        "norwoodj/helm-docs",
        "helm/helm",
        "roboll/helmfile",
        "Praqma/helmsman",
        "github/hub",
